<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
  </div>
  <ul>
    <% @book.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: @book, local:true, class: "edit_book" do |f| %>
  <div class="field">
    <%= f.label "Title" %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label "Body" %>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit 'Update Book' %>
  </div>
  <%= link_to "Show", book_path(@book.id), class: "show_#{@book.id}" %>
  <%= link_to "Back", books_path, class: "back" %>

<% end %>